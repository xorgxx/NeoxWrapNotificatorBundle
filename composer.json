{
  "name": "xorgxx/wrap-notificator-bundle",
  "description": "WrapNotificatorBundle: ergonomic facade over Symfony Notifier + Mailer + Mercure + Web Push (minishlink/web-push)",
  "type": "symfony-bundle",
  "license": "MIT",
  "require": {
    "php": "^8.3",
    "symfony/mailer": "^7.0",
    "symfony/notifier": "^7.0",
    "symfony/mercure-bundle": "^0.3|^0.4",
    "symfony/mercure": "^0.6|^0.7|^0.8",
    "symfony/uid": "^7.0",
    "symfony/console": "^7.0",
    "psr/cache": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpspec/prophecy": "^1.18",
    "phpspec/prophecy-phpunit": "^2.0",
    "friendsofphp/php-cs-fixer": "^3.64",
    "minishlink/web-push": "^7.0|^8.0",
    "phpstan/phpstan": "^1.11",
    "symfony/slack-notifier": "^7.0",
    "symfony/telegram-notifier": "^7.0",
    "symfony/messenger": "^7.0",
    "twig/twig": "^3.0"
  },
  "suggest": {
    "symfony/messenger": "For async notifications",
    "symfony/http-client": "Required by some transports and Mercure client",
    "symfony/cache": "Provides a default PSR-6 cache pool (cache.app) used for deduplication"
  },
  "autoload": {
    "psr-4": {
      "Neox\\WrapNotificatorBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Neox\\WrapNotificatorBundle\\Tests\\": "tests/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.0-dev"
    }
  },
    "scripts": {
        "test": "@php -d zend.assertions=1 -d assert.exception=1 vendor/bin/phpunit -c phpunit.xml.dist",
        "test:coverage": "@php -d xdebug.mode=coverage -d zend.assertions=1 -d assert.exception=1 vendor/bin/phpunit -c phpunit.xml.dist --coverage-clover var/coverage.xml --coverage-text",
        "cs-fix": "@php vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php",
        "lint": "@php vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php --dry-run --diff",
        "analyse": "@php vendor/bin/phpstan analyse --configuration=phpstan.neon.dist"
    }
}
